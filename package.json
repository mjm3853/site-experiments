{
  "name": "static-site-template",
  "version": "1.0.0",
  "description": "Template for an HTML, SASS, TS based static site",
  "main": "index.js",
  "scripts": {
    "lint": "tslint 'src/**/*.{ts,tsx}'",
    "test": "jest",
    "start": "nodemon -w src -e html,ts,scss -i dist -x  \"parcel build ./src/index.html && cp serve.json ./dist && cd ./dist && serve\"",
    "build": "parcel build ./src/index.html && cp serve.json ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mjm3853/static-site-template.git"
  },
  "author": "Matt McGrath (https://github.com/mjm3853)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mjm3853/static-site-template/issues"
  },
  "homepage": "https://github.com/mjm3853/static-site-template#readme",
  "dependencies": {
    "lit-html": "^0.10.2"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "autoprefixer": "^9.1.3",
    "jest": "^23.5.0",
    "node-sass": "^4.9.3",
    "nodemon": "^1.18.3",
    "parcel-bundler": "^1.9.7",
    "serve": "^10.0.0",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  },
  "jest": {
    "collectCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/*.test.+(ts|tsx|js)"
    ]
  }
}
